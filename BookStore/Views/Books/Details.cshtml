@model BookStore.Models.Book
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<ul>
    <li>Category: @Model.Category.Name</li>
    <li>Published Date: @Model.PublishedDate.ToLongDateString()</li>
    <li>Added to datebase on: @Model.AddedDate.ToLongDateString()</li>
    <li>Number in stock: @Model.NumberInStock</li>
</ul>